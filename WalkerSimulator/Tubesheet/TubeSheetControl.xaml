<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WalkerSimulator.tubesheet"
             xmlns:ViewModels="clr-namespace:WalkerSimulator.Tubesheet.ViewModels" x:Class="WalkerSimulator.tubesheet.TubesheetControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450"
             Width="{Binding ActualHeight, RelativeSource={RelativeSource Self}}"
             Background="Beige">

    <Viewbox Stretch="Uniform">
        <UniformGrid x:Name="mainGrid" Background="LightGray" Rows="{Binding RowsNum}" Columns="{Binding ColumnsNum}"  Margin="35" >
        </UniformGrid>
    </Viewbox>
</UserControl>
